<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :product_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price, id: :product_price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, id: :product_quantity, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, id: :product_description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :brand %>
    <%= form.text_field :brand, id: :product_brand, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :rating %>
    <%= form.number_field :rating, id: :product_rating,  class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :category_id %>
    <%= form.select(:category_id, @categories.collect{ |c| [c.name, c.id]}, {include_blank: "Select Category"}, required: true) %>
  </div>

<% if current_page?(new_product_path) %>
   <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, required: true, id: :product_image, class: "form-control" %>
  </div>
<% else %>
  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, id: :product_image, class: "form-control" %>  
  </div>
  <% end %>

  <div class="actions">
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>
